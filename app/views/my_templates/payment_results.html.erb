<% params %>
<html>
  <head>
    <title>Payment Results</title>
  </head>

<h1>Payment Results</h1>
<body>
  <dl>
    <dt>APR</dt>
    <dd><%= format("%.4f", params.fetch("user_apr").to_f)%>%</dd>
    <dt>Number of years</dt>
    <dd><%=@years%></dd>
    <dt>Principal</dt>
    <dd><%=@pv.to_fs(:currency)%></dd>
    <dt>Payment</dt>
    <dd><%=@user_payment.to_fs(:currency)%></dd>
  </dl>
  <a href="/payment/new">Calculate another payment</a>
</body>
